<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:background="#24B2FD"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:minWidth="54dp"
                android:visibility="gone"
                android:src="@drawable/left"/>

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="报表管理"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                />

            <ImageView
                android:id="@+id/title_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:minWidth="54dp"
                android:visibility="gone"
                android:src="@drawable/my_setting_icon"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_first_all">
        </View>

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_rectangle">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="盾体长度(m)"
                    android:textColor="#02A1E9"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/duct_piece_track_begin_huanhao"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:background="@drawable/edit_background"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:textColor="#838282"
                    android:gravity="center"

                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="3"
                android:visibility="gone"
                android:id="@+id/duct_piece_track_begin_huanhao_tishi"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#02A1E9"
                    android:textSize="15sp" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:text="盾体长度应在3～20之间"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#DC143C"
                    android:gravity="center"

                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="3"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="曲线半径(m)"
                    android:textColor="#02A1E9"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/duct_piece_track_stop_huanhao"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edit_background"
                    android:gravity="center"
                    android:textColor="#838282"

                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="3"
                android:visibility="gone"
                android:id="@+id/duct_piece_track_jies_huanhao_tishi"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#02A1E9"
                    android:textSize="15sp" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:text="曲线半径应在50～1200之间"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#DC143C"
                    android:gravity="center"

                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            >
            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="查询"
                android:textColor="@color/white"
                android:id="@+id/duct_piece_track_chaxun_btn"
                android:background="@drawable/button_coner"

                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_rectangle">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/svgtwo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rectangle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="偏转角θ(°)"
                android:gravity="center"
                android:textColor="#219DCF"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="40dp"
                android:text="盾尾偏移量(m)"
                android:gravity="center"
                android:textColor="#219DCF"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="状态"
                android:gravity="center"
                android:textColor="#219DCF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="#E6F3F9"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="---"
                android:id="@+id/num_one"
                android:gravity="center"
                android:textColor="#b0b0b0"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="40dp"
                android:text="---"
                android:id="@+id/num_two"
                android:gravity="center"
                android:textColor="#b0b0b0"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="---"
                android:id="@+id/num_three"
                android:gravity="center"
                android:textColor="#b0b0b0"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>